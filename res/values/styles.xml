<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Colors -->
	<color name="white_opaque">#FFFFFFFF</color>
	<color name="blue">#0099CC</color>
	
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:background">@color/white_opaque</item>
        <item name="android:spinnerItemStyle">@style/AppSpinnerItem</item>
        <item name="android:buttonStyle">@style/AppButton</item>
        <item name="android:textAppearance">@style/AppTextSize</item>
        <item name="android:textSize">17sp</item>
        <item name="actionBarStyle">@style/AppActionBar</item>
    </style>
    
    <style name="AppActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="titleTextStyle">@style/AppActionBarTitleTextStyle</item>
    </style>

    <style name="AppActionBarTitleTextStyle">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="AppTextSize" parent="@android:style/TextAppearance.Medium">
	</style>
	
    <style name="AppSpinnerItem" parent="@style/Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:background">@color/white_opaque</item>
        <item name="android:padding">0dp</item>
        <item name="android:dividerHeight">10dip</item>
    	<item name="android:divider">@color/blue</item>
    </style>
    
    <style name="AppButton" parent="@style/Widget.AppCompat.Light.ActionButton">
       <item name="android:textSize">18sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textColor">#000000</item>
       <item name="android:background">@color/white_opaque</item>
       <item name="android:gravity">center</item>
       <item name="android:shadowColor">#000000</item>
       <item name="android:shadowDx">0</item>
       <item name="android:shadowDy">0</item>
       <item name="android:shadowRadius">0</item>
       <item name="android:padding">10dp</item>
   </style>
   
</resources>
